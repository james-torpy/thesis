#SAMPLES = list("2")

PROPORTIONS = ["0.9", "0.8", "0.7", "0.6", "0.5", "0.4", "0.3", "0.2", "0.15", "0.1", "0.05", "no", \
    "0.9_gene", "0.8_gene", "0.7_gene", "0.6_gene", "0.5_gene", "0.4_gene", "0.3_gene", "0.2_gene", \
    "0.15_gene", "0.1_gene", "0.05_gene"]
