  "CID45152", "CID45172",
  
])


# infercnv parameters:
file_name="03_seurat_object_processed.Rdata"
res = "PC_A_res.1"
coverage_filter = "filtered"
nUMI_threshold = "3200"
nGene_threshold = "700"
garnett_slot = "garnett_call_ext_major"
manual_epithelial = "none"
exclude_clusters = "none"

# plot parameters:
remove_artefacts="artefacts_not_removed"
epi_res="PC_C_res.1"
epi_PC="C"
x_outlier_multiplier="1.5"
x_thresh_multiplier="3"
y_outlier_multiplier="1.5"
y_thresh_multiplier="3"
subcluster_method="random_trees"
subcluster_p="0.05"
min_cluster_cells="5"
subcluster_merge="TRUE"
merge_thresh="0.95"
merge_diff_prop="0.75"
plot_references="FALSE"
array_CNVs = "FALSE"

# expression plot parameters:
met="FALSE"
res="PC_C_res.1"
PC="C"
remove_outliers="TRUE"
outlier_sd_multiplier=3
normal_markers="EPCAM_KRT18_ESR1_KRT5_KRT14_PGR_ERBB2_MKI67"
epi_markers="EPCAM_KRT18_ESR1_KRT5_KRT14_PGR_ERBB2_MKI67"
custom_epi_markers="ELF5_GATA3_CD44_ZEB1_MUCL1_NDRG1_IGFBP5"

# signal plot parameters:
min_CNV_length = "20"
min_CNV_proportion = "0.5"

# DE parameters:
adj_p_cutoff = "0.1"
specific_DE = "none"
specific_features = "none"

# collated heatmap parameters:
gene_proportion_threshold = "0.5"

